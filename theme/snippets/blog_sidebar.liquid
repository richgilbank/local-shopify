<div class="span3 sidebar">

  <h3>{{ 'blogs.sidebar.recent_articles' | t }}</h3>
  {% for article in blogs[blog.handle].articles limit:10 %}
  <div class="article">
    <p><a href="{{ article.url }}">{{ article.title }}</a> <em>{% assign published_at = article.published_at | date: format: 'short' %}{{ 'blogs.article.posted_on_date' | t: author: article.author, date: published_at }}</em></p>
  </div>
  {% endfor %}

  {% if blog.all_tags.size > 0 %}
  <div class="clearfix">

    <h3>{{ 'blogs.sidebar.tags' | t }}</h3>
    <ul class="tags">
      <li{% unless current_tags %} class="active"{% endunless %}><a href="{{ shop.url}}/blogs/{{ blog.handle }}">{{ 'blogs.sidebar.all' | t }}</a></li>
      {% for tag in blog.all_tags %}
      {% if current_tags contains tag %}
      <li class="active">{{ tag | link_to_remove_tag: tag }}</li>
      {% else %}
      <li>{{ tag | link_to_tag: tag }}</li>
      {% endif %}
      {% endfor %}
    </ul>

  </div>
  {% endif %}

</div>
